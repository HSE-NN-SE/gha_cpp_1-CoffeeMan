<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CorneredButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">29dp</item>
    </style>

    <style name="InputField" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">255</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="InputField.FrameLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@drawable/bg_input_field</item>
    </style>

    <style name="ScreenTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">19dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/screen_title_text</item>
    </style>
</resources>