<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YourVision" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantNight</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryNight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantNight</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryNight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:background">@drawable/gradient_bg_night</item>

        <item name="input_field_bg">@color/input_field_bg_night</item>
        <item name="input_field_stroke">@color/input_field_stroke_night</item>

        <item name="screen_title_text">@color/screen_title_text_night</item>
    </style>
</resources>